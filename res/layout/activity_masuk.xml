<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BaruActivity">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/design_default_color_primary"
            android:layout_marginBottom="10dp"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Datang di"/>

        <TextView
            android:textColor="@color/design_default_color_primary"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toko Baju Dinara"/>

        <ImageView
            android:layout_width="196dp"
            android:layout_height="231dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/logo_dinara" />

        <Button
            android:id="@+id/btn_prosesLogin"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn_login1"
            android:layout_marginTop="15dp"
            android:layout_width="170dp"
            android:layout_height="35dp"
            android:text="Masuk"/>

        <Button
            android:id="@+id/btn_register"
            android:layout_marginTop="10dp"
            android:textColor="@drawable/bg_btn_login2"
            android:background="@color/white"
            android:layout_width="170dp"
            android:layout_height="35dp"
            android:text="Daftar"/>
    </LinearLayout>

</RelativeLayout>